<h1>Park a Vehicle</h1>

<%= form_for @vehicle do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>
      <ul>
        <% @vehicle.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :vehicle_type %>
    <%= f.select :vehicle_type, Vehicle.vehicle_types.keys.map { |type| [type.titleize, type] } %>
  </div>

  <div class="field">
    <%= f.label :parking_space_id %>
    <%= f.select :parking_space_id, ParkingSpace.all.map { |ps| [ps.id, ps.id] } %>
  </div>

  <div class="field">
    <%= f.label :entrance_id %>
    <%= f.select :entrance_id, Entrance.all.map { |entrance| [entrance.name, entrance.id] } %>
  </div>

  <div class="actions">
    <%= f.submit "Park Vehicle" %>
  </div>
<% end %>
